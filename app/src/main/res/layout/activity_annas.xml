<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".Annas">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="قُلْ اَعُوْذُ بِرَبِّ النَّاسِۙ"
        android:textColor="@android:color/black"
        android:textSize="28sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="مَلِكِ النَّاسِۙ"
        android:textColor="@android:color/black"
        android:textSize="28sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="اِلٰهِ النَّاسِۙ"
        android:textColor="@android:color/black"
        android:textSize="28sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="مِنْ شَرِّ الْوَسْوَاسِ ەۙ الْخَنَّاسِۖ"
        android:textColor="@android:color/black"
        android:textSize="28sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="الَّذِيْ يُوَسْوِسُ فِيْ صُدُوْرِ النَّاسِۙ"
        android:textColor="@android:color/black"
        android:textSize="28sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="مِنَ الْجِنَّةِ وَالنَّاسِ"
        android:textColor="@android:color/black"
        android:textSize="28dp" />
</LinearLayout>